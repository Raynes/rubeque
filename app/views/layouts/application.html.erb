<!DOCTYPE html>
<html>
<head>
  <title>rubeque</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="header">
  <div class="container">
    <div class="logo">
      rubeque
    </div>
    <div class="user">
      <% if user_signed_in? %>
        <p>Logged in: <%= current_user.username %></p>
        <%= link_to "Logout", destroy_user_session_path(), method: :delete %>
      <% else %>
        <%= link_to "Sign In", new_user_session_path %>
        <%= link_to "Register", new_user_registration_path %>
      <% end -%>
    </div>
    <div class="menu">

    </div>
  </div>
</div>

<div class="content">
  <%= yield %>
</div>

</body>
</html>
