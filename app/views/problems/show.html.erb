<h1><%= @problem.title %></h1>

<p>
  <b>Difficulty:</b><br/>
  <%= @problem.difficulty.titleize %>
</p>

<% if !@problem.instructions.blank? %>
<p>
  <b>Instructions:</b><br/>
  <%= @problem.instructions %>
</p>
<% end %>

<p>
  <b>Code:</b>
  <pre><%= @problem.code %></pre>
</p>

<h2>Your Solution</h2>

<% if @problem.solved?(current_user) %>
<p>
  <%= link_to "Other People's Solutions", solutions_path(:problem_id => @problem.id) %>
</p>
<% end -%>

<%= form_for @solution do |f| -%>
  <%= form_errors @solution %>
  <%= f.hidden_field :problem_id %>
  <%= f.text_area :code %><br/>
  <%= f.submit "Submit", :disable_with => "Submitting..." unless @problem.solved?(current_user) %>
<% end -%>
<br/>

<%= link_to 'Back', problems_path %>
