<h1>Listing problems</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Instructions</th>
    <th>Difficulty</th>
    <th>Solutions</th>
    <th></th>
  </tr>

<% @problems.each do |problem| %>
  <tr>
    <td><%= problem.title %></td>
    <td><%= problem.instructions %></td>
    <td><%= problem.difficulty %></td>
    <td><%= problem.solutions.count %></td>
    <td><%= link_to 'Show', problem %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Problem', new_problem_path %>
